//      "module": "NodeNext",
//      "moduleResolution": "NodeNext",
//      "skipLibCheck": true,
//      "strict": false,
//      "declaration": false
//    }
//  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
